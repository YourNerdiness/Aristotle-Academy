<main>

  <h1 class="center">Sign In</h1>

  <p id="error" class="center"></p>

  <div class="center">

    <dialog id="mfaDialog">

      <button onclick="document.getElementById('mfaDialog').close()">Close</button>

      <h5>We have sent a code to your email, please enter it here to complete sign in: </h5>
      <p id="mfaError"></p>
      <input type="text" id="code" name="code">
      <button onclick="completeMFA()">Compelte Sign In</button>

    </dialog>

    <form onsubmit="return false;">

      <div id="usernameDiv">

        <label for="username">Username</label>
        <input type="text" id="username" name="username">

      </div>

      <div id="passwordDiv">

        <label for="password">Password</label>
        <input type="password" id="password" name="password">

      </div>

      <button onclick="signin()">Sign In</button>

    </form>

  </div>

  <p class="center">Dont have an account yet?&nbsp<a href="./signup" style="color: blue;">Sign up</a>.</p>
  <p class="center">Forget your password?&nbsp<a href="./resetPassword" style="color: blue;">Reset it</a>.</p>

</main>