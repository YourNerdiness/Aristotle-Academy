<main class="center">

    <div id="formDiv">

        <p id="error"></p>

        <label for="numStudents">Number of students</label>
        <select id="numStudents" name="numStudents">

            <option value="school100"><%= price100Students %></option>
            <option value="school200"><%= price200Students %></option>
            <option value="school300"><%= price300Students %></option>
            <option value="school400"><%= price400Students %></option>
            <option value="school500"><%= price500Students %></option>
            <option value="school600"><%= price600Students %></option>
            <option value="school700"><%= price700Students %></option>
            <option value="school800"><%= price800Students %></option>
            <option value="school900"><%= price900Students %></option>
            <option value="school1000"><%= price1000Students %></option>

        </select>

        <label for="ipAddr">School Network's Public IP Address</label>
        <input id="ipAddr" name="ipAddr" type="text">

        <label for="password">Re-enter password</label>
        <input id="password" name="password" type="password">

        <label for="schoolName">Enter school name</label>
        <input id="schoolName" name="schoolName" type="text">

        <button id="submit" style="display: block;">Submit</button>

    </div>

</main>